<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    android:layout_marginBottom="80dp"
    android:background="#fff2f2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.org.kulture.kulture.MyAccount"
    tools:showIn="@layout/activity_my_account">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:civ_border_width="2dp"
                android:visibility="gone"
                app:civ_border_color="#FF000000"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_user"
                android:layout_height="80dp" />
            <LinearLayout
                android:id="@+id/click_for_upload"
                android:layout_width="90dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/camera_background"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/ic_camera_alt_black_24dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Add Image"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:layout_margin="2dp"
                    android:textColor="#ffffff"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content">

            <com.org.kulture.kulture.model.MyTextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                app:font="Roboto-Regular.ttf"
                android:text=""
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_height="wrap_content" />

            <com.org.kulture.kulture.model.MyTextView
                android:layout_width="match_parent"
                app:font="Roboto-Regular.ttf"
                android:text="0428 000 078"
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_height="wrap_content" />
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="wrap_content">

             <com.org.kulture.kulture.model.MyTextView
                android:id="@+id/profile_email"
                android:layout_weight="3"
                android:layout_width="match_parent"
                app:font="Roboto-Regular.ttf"
                android:text=""
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="15dp"
                android:layout_height="wrap_content"/>
             <ImageView
                 android:layout_weight="1"
                 android:id="@+id/edit_profile"
                 android:layout_width="45dp"
                 android:visibility="gone"
                 android:layout_height="30dp"
                 android:layout_margin="4dp"
                 android:background="@drawable/ic_edit_black_24dp"/>

         </LinearLayout>
        </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_margin="10dp"
             android:layout_height="wrap_content">

             <android.support.v7.widget.CardView
                 android:layout_width="match_parent"
                 android:translationZ="4dp"
                 app:cardCornerRadius="2dp"
                 android:layout_height="wrap_content">
                 <include layout="@layout/address_layout"/>

             </android.support.v7.widget.CardView>
         </LinearLayout>

        <LinearLayout
            android:id="@+id/privacy_policy_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/privacy_policy"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/terms_conditions_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <include layout="@layout/terms_conditions"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/help_center_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <include layout="@layout/help_center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/log_out_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <include layout="@layout/log_out"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
