<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    android:fillViewport="true"
    android:background="#fff2f2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.org.kulture.kulture.PaymentScreen"
    tools:showIn="@layout/activity_payment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/contain_payment"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:translationZ="1dp"
                app:cardCornerRadius="4dp"
                android:layout_height="wrap_content">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/payment_paypal"
                    android:layout_width="match_parent"
                    android:text="Paypal"
                    android:layoutDirection="rtl"
                    android:textStyle="normal"
                    android:textSize="16dp"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/payment_paypal_button"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/paypals"
                    android:layout_height="wrap_content" />
            </RadioGroup>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:translationZ="1dp"
                app:cardCornerRadius="4dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bounce_payment_price_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PRICE DETAILS"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Free shipping for orders over $ 65"
                            android:textStyle="normal"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14dp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:background="#d7d6d6"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:text="Price"
                            android:layout_margin="6dp"
                            android:textSize="14dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="&#36; "
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:typeface="serif"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/payment_price"
                            android:layout_width="wrap_content"
                            android:text=""
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:layout_marginRight="6dp"
                            android:textSize="14dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:text="Delivery"
                            android:layout_margin="6dp"
                            android:textSize="14dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/payment_delivery"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:text="$ 0.00"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:layout_margin="6dp"
                            android:textSize="14dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:text="Amount Payable"
                            android:layout_margin="6dp"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="&#36; "
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:typeface="serif"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/payment_total"
                            android:layout_width="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:layout_marginRight="6dp"
                            android:textSize="14dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
        </LinearLayout>
</android.support.v4.widget.NestedScrollView>
