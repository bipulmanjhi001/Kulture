<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="50dp"
    android:background="@color/white"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.org.kulture.kulture.DesignYourOwn"
    tools:showIn="@layout/activity_design_your_own">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/design_own_title"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:text="DESIGN YOUR OWN"
                android:layout_height="wrap_content" />
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/design_own_progressBar"
                android:layout_width="30dp"
                android:translationZ="2dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </LinearLayout>
        <com.org.kulture.kulture.model.ExpandableHeightGridView
            android:id="@+id/load_design_own_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:horizontalSpacing="10dp"
            android:isScrollContainer="false"
            android:numColumns="2"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
